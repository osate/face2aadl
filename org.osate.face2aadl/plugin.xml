<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.osate.face2aadl.translate"
            name="Translate to AADL">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.osate.face2aadl.TranslatorHandler"
            commandId="org.osate.face2aadl.translate">
         <enabledWhen>
            <with
                  variable="selection">
               <and>
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IFile">
                        <test
                              property="org.eclipse.core.resources.extension"
                              value="face">
                        </test>
                     </adapt>
                  </iterate>
               </and>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.osate.ui.osateMenu?after=third_party">
         <command
               commandId="org.osate.face2aadl.translate">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.osate.ui.navigator.AadlNavigator?after=osate_begin">
         <command
               commandId="org.osate.face2aadl.translate">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.osate.pluginsupport.aadlcontribution">
      <aadlcontribution
            file="resources/FACE.aadl"
            id="org.osate.face2aadl.aadlcontribution1">
      </aadlcontribution>
   </extension>
</plugin>
